<h1 class="page-header">
  <%= t(:list, scope: "commons.unisex", model: t(:student, scope: "activerecord.models").pluralize) %>

  <%= link_to t(:new, scope: "commons.male", model: t(:student, scope: "activerecord.models")), new_student_path, class: "btn btn-primary pull-right" %>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:name, scope: "activerecord.attributes.student") %></th>
      <th><%= t(:register_number, scope: "activerecord.attributes.student") %></th>
      <th><%= t(:status, scope: "activerecord.attributes.student") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.register_number %></td>
        <td><span class="label label-<%= (student.status == 1 ? "success" : "danger") %>"><%= student.status_str %></span></td>
        <td><%= link_to t(:show), student %></td>
        <td><%= link_to t(:edit), edit_student_path(student) %></td>
        <td><%= link_to t(:destroy), student, method: :delete, data: { confirm: t(:are_you_sure?) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>