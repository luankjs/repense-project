<h1 class="page-header">
  <%= t(:list, scope: "commons.unisex", model: t(:course, scope: "activerecord.models").pluralize) %>
  <%= link_to t(:new, scope: "commons.male", model: t(:course, scope: "activerecord.models")), new_course_path, class: "btn btn-primary pull-right" %>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(:name, scope: "activerecord.attributes.course") %></th>
      <th><%= t(:description, scope: "activerecord.attributes.course") %></th>
      <th><%= t(:status, scope: "activerecord.attributes.course") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><span class="label label-<%= (course.status == 1 ? "success" : "danger") %>"><%= course.status_str %></span></td>
        <td><%= link_to t(:show), course %></td>
        <td><%= link_to t(:edit), edit_course_path(course) %></td>
        <td><%= link_to t(:destroy), course, method: :delete, data: { confirm: t(:are_you_sure?) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>