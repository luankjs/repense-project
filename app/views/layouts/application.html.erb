<!DOCTYPE html>
<html>
<head>
  <title>RepenseProject</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Repense Project</a>
      </div>
    </div>
  </nav>

	<div class="container-fluid" id="main-content">
		<div class="row">
			<div class="col-sm-3 col-md-2 sidebar">
        <ul class="nav nav-sidebar">
          <li class="<%= "active" if params[:controller] == "students" %>">
            <%= link_to t(:student, scope: "activerecord.models").pluralize, students_url %>
          </li>
          <li class="<%= "active" if params[:controller] == "courses" %>">
            <%= link_to t(:course, scope: "activerecord.models").pluralize, courses_url %>
          </li>
          <li class="<%= "active" if params[:controller] == "classrooms" %>">
            <%= link_to t(:classroom, scope: "activerecord.models").pluralize, classrooms_url %>
          </li>
        </ul>
      </div>

      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <% if notice %>
          <p id="notice" class="bg-info"><%= notice %></p>
        <% end -%>
				<%= yield %>
      </div>
		</div>
	</div>

</body>
</html>
